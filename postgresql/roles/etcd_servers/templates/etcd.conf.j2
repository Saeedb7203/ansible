name: '{{ansible_hostname}}'
initial-cluster-token: {{ cluster_token }}
initial-cluster-state: {{ cluster_state }}
initial-cluster: {{initial_cluster}}
data-dir: {{etcd_data}}
initial-advertise-peer-urls: http://{{ ansible_facts['default_ipv4']['address'] }}:{{ etcd_comm_port }}
listen-peer-urls: http://{{ ansible_facts['default_ipv4']['address'] }}:{{ etcd_comm_port }}
advertise-client-urls: http://{{ ansible_facts['default_ipv4']['address'] }}:{{ etcd_client_port }}
listen-client-urls: http://127.0.0.1:{{ etcd_client_port }},http://{{ ansible_facts['default_ipv4']['address'] }}:{{ etcd_client_port }}
