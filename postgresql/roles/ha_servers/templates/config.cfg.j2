global
    maxconn 100

defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

listen stats
    mode http
    bind *:{{stat_port}}
    stats enable
    stats uri /

listen primary
    bind *:{{primary_port}}
    option httpchk /primary 
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    {% for host in groups['db_servers'] %}
        server {{ hostvars[host]['inventory_hostname'] }} {{ hostvars[host]['inventory_hostname'] }}:{{ postgres_port }} maxconn 100 check port {{ postgres_rest_port }}
    {% endfor %}

listen standbys
    balance roundrobin
    bind *:{{repl_port}}
    option httpchk /replica 
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    {% for host in groups['db_servers'] %}
        server {{ hostvars[host]['inventory_hostname'] }} {{ hostvars[host]['inventory_hostname'] }}:{{ postgres_port }} maxconn 100 check port {{ postgres_rest_port }}
    {% endfor %}
